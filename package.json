{
  "name": "server-api-data7",
  "author": "cesar carlos",
  "version": "1.0.0",
  "description": "Servidor data7 para integração com lojas",
  "main": "server.js",
  "bin": "./dist.loja/src/server.js",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "dev:nodemon": "cls && nodemon --watch 'src/' --exec 'ts-node --files --transpile-only src/server.ts' -e ts",
    "build:wind": "tsc && copyfiles ./.env ./dist/src/ && copyfiles ./src/certificates/**/* ./dist/ && copyfiles ./src/sql/**/* ./dist/",
    "build:wind:fabrica": "tsc --outDir ./dist.fabrica && copyfiles ./.env ./dist.fabrica/ && copyfiles ./src/certificates/**/* ./dist.fabrica/ && copyfiles ./src/sql/**/* ./dist.fabrica/",
    "build:wind:loja": "tsc --outDir ./dist.loja && copyfiles ./.env ./dist.loja/src/ && copyfiles ./src/certificates/**/* ./dist.loja/ && copyfiles ./src/sql/**/* ./dist.loja/",
    "format": "npx prettier './src/**/*.ts' './src/**/*.js' --write",
    "test": "jest --watchAll --config ./jest.config.js",
    "start": "node ./dist.loja/src/server.js"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "currency-formatter": "^1.5.9",
    "data7-pix": "^1.0.7",
    "dotenv": "^16.0.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.0.0",
    "gn-api-sdk-typescript": "^1.0.7",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "morgan": "^1.10.0",
    "mssql": "^10.0.2",
    "node-localstorage": "^2.2.1",
    "promisify": "^0.0.3",
    "socket.io": "^4.7.2",
    "sybase": "^1.2.3",
    "tedious": "^14.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^2.5.0",
    "@types/cors": "^2.8.12",
    "@types/currency-formatter": "^1.5.1",
    "@types/express": "^4.17.20",
    "@types/jest": "^28.1.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/mssql": "^8.0.3",
    "@types/node": "^18.0.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/tedious": "^4.0.8",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "jest": "^28.1.2",
    "nodemon": "^1.3.3",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}